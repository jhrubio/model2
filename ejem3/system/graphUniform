type            sets;

libs            ("libsampling.so");

fields          (U p);

writeControl    writeTime;

interpolationScheme cellPoint; 

setFormat       csv; // csv, raw

sets
(
    "etiqueta"	
    {
        type            lineUniform;
        axis            y;		// REFERENCIA (xyz, distance)
        start           (-6 3.7 0);	// PUNTO INICIAL DE LA LÍNEA
        end             (-6 4.7 0);	// PUNTO FINAL DE LA LÍNEA
        nPoints         26;		// CANTIDAD DE REGISTROS A LO LARGO DE LA LÍNEA
    }

);

